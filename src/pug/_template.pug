doctype html
html(lang="es" data-bs-theme="")
  head
    //- <meta name="viewport" content="width=device-width, initial-scale=1">
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css")
    block css
    link(rel="stylesheet", href="css/workout.css")
    block logo
      .logo(style="background-image: url('img/logo_fitsale.png')")
  block header
    header.sticky-top
      .nav_container
        nav
          ul
            li
              a(href="./") Inicio
            li
              a(href="#") Servicios
            li
              a(href="#") Contacto
  body
    input(type="checkbox", id="switch-theme").d-none

    block content
    
    #particles-js(style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; z-index: -1;")
    block footer
      footer#footer
        .container
          .row
            .col-md-12
              .footer-logo(style="background-image: url('img/logo_fitsale.png')")
              p © 2022 Fitsale. Todos los derechos reservados.
              hr
            .col-md-4
              h5 Contacto
              ul
                li
                  a(href="tel:+1234567890") +1-234-567-890
                li
                  a(href="mailto:info@fitsale.com") info@fitsale.com

            .col-md-4
              h5 Empresa
              ul
                li
                  a(href="/about") Sobre nosotros
                li
                  a(href="/privacy") Política de privacidad
                li
                  a(href="/terms") Términos de servicio

            .col-md-4
              h5 Síguenos
              ul.social-links
                li
                  a(href="https://facebook.com/fitsale") 
                    img(src="images/facebook.svg", alt="Facebook")
                li
                  a(href="https://twitter.com/fitsale") 
                    img(src="images/twitter.svg", alt="Twitter")
                li
                  a(href="https://instagram.com/fitsale") 
                    img(src="images/instagram.svg", alt="Instagram")

        
  script(src="js/index.js")
  script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")
  script(src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js")
  block js
  block jsexec

  script.
    particlesJS.load('particles-js', 'js/particles.json', function() {
      console.log('callback - particles.js config loaded');
    });